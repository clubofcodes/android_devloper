<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dataViewLinearLayout"
    style="@style/LinearLayoutStyle"
    android:background="@drawable/bg"
    android:padding="10dp">

    <TextView
        android:id="@+id/txtNameList"
        style="@style/textViewStyle"
        android:text="TextView"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/offlineEmailTxt"
        style="@style/textViewStyle"
        android:text="offlineUsersEmail"
        android:textColor="@color/red" />

    <!--*******************"Tutorial 12(For Phone and email)"*******************-->
    <LinearLayout
        android:id="@+id/emailPhoneLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_weight="4"
            android:gravity="start"
            android:text="rjagetiya780@rku.ac.in" />

        <TextView
            android:id="@+id/txtPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="5"
            android:gravity="end"
            android:text="+91 8347383659" />
    </LinearLayout>
    <!--*******************"Tutorial 12"*******************-->

    <!--*******************"Tutorial 10"*******************-->

</LinearLayout>