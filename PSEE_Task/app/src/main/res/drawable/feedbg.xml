<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Add background color here -->
    <gradient
        android:angle="0"
        android:centerX="0.1"
        android:centerY="0.1"
        android:centerColor="@color/primary"
        android:startColor="@color/orange"
        android:endColor="@color/primary_dark"
        android:gradientRadius="100"
        android:type="linear"/>

    <!-- Assign border color and width of border -->
    <stroke
        android:width="2dp"
        android:color="@color/black"></stroke>

    <!-- To add some padding -->
    <padding
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:top="4dp"></padding>

    <!-- Assign corner radius here -->
    <corners
        android:radius="20dp">

    </corners>

</shape>