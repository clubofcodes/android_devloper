<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/red</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:itemBackground">@drawable/bg</item>
    </style>

    <!-- Users DataView Layout theme of application -->
    <style name="NotificationBarStyle" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/red</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <!-- LinearLayout Style of application -->
    <style name="LinearLayoutStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">16dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- Other Layout having Same width_height style of application -->
    <style name="SameWH_Layout">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/bg</item>
    </style>

    <!-- Titles TextView of application -->
    <style name="TitleStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- TextView of application -->
    <style name="textViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:buttonTint">@color/white</item>
    </style>

    <!-- EditText of application -->
    <style name="textBoxViewStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@drawable/border</item>
        <item name="android:ems">10</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:textColorHighlight">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColorHint">@color/secondary_text</item>
    </style>

    <!-- Buttons of application -->
    <style name="ButtonStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/border</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:textSize">24sp</item>
    </style>

    <!-- RadioButton of application -->
    <style name="radioButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:buttonTint">@color/white</item>
    </style>

    <!-- SwitchTheme of application -->
    <style name="SwitchTheme"  parent="@style/Widget.AppCompat.CompoundButton.Switch">
        <item name="colorControlActivated">@color/white</item>
        <item name="android:colorForeground">@color/switchTrackDisable</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
    </style>

    <!-- SwitchStyle of application -->
    <style name="SwitchStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Grey bg Theme of application -->
    <style name="SpinnerTheme" parent="Base.Theme.AppCompat">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <!-- Spinner of application -->
    <style name="SpinnerStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:ems">10</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:spinnerMode">dialog</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/silver</item>
        <item name="colorAccent">@color/black</item>
    </style>

</resources>