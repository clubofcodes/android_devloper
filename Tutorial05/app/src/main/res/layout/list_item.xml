<?xml version="1.0" encoding="utf-8"?>
<!--*******************"Tutorial 10 (onlineUsers Name & Email)"*******************-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dataViewLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border"
    android:orientation="vertical"
    android:paddingStart="10dp"
    android:paddingLeft="10dp"
    android:paddingEnd="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="5dp">

    <TextView
        android:id="@+id/listTxtName"
        style="@style/textViewStyle"
        android:text="TextView"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/listTxtEmail"
        style="@style/textViewStyle"
        android:text="TextView"
        android:visibility="gone" />

    <!--*******************"Tutorial 12(For Phone and email)"*******************-->
    <LinearLayout
        android:id="@+id/emailPhoneLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_weight="4"
            android:gravity="start"
            android:text="rjagetiya780@rku.ac.in" />

        <TextView
            android:id="@+id/txtPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="5"
            android:gravity="end"
            android:text="+91 8347383659" />
    </LinearLayout>
    <!--*******************"Tutorial 12"*******************-->

    <!--*******************"Tutorial 10"*******************-->

</LinearLayout>